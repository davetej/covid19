import unittest
import os
import sys
from airflow.models import DagBag

sys.path.insert(0, os.path.abspath(os.path.dirname(__file__)))

import validate_dags

class TestValidateDags(unittest.TestCase):

    # Define the DAG folder path (static and hard-coded)
    DAG_FOLDER_PATH = '/path/to/your/dag/folder'

    def setUp(self):
        self.dag_bag = DagBag(self.DAG_FOLDER_PATH)

    def test_dag_with_tag_present(self):
        self.assertTrue(validate_dags.check_dag_tag(self.DAG_FOLDER_PATH, 'A'))

    def test_dag_with_tag_not_present(self):
        self.assertFalse(validate_dags.check_dag_tag(self.DAG_FOLDER_PATH, 'NonExistentTag'))

if __name__ == '__main__':
    unittest.main()
